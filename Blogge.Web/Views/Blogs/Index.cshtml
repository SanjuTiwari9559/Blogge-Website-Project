@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager
@model Blogge.Web.Models.ViewModel.BlogDetails
@{
    ViewData["Title"] = Model.PageTitle;
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            @if(Model!=null )
            {
                <h1 class="mb-3">@Model.Heading</h1>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-secondry ">@Model.Author

                    </span>

                    <span class="text-secondary">@Model.PublishedDate.ToShortDateString()

                    </span>

                </div>
                <div class="mb-2">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <a>
                            <i class="bi bi-hand-thumbs-up-fill"></i>
                        </a>
                    }
                   
                    <span>@Model.totalLikes</span> like

                </div>
                <div class="d-flex mb-3" >
                    @foreach(var item in Model.Tags)
                    {
                     <span class="badge bg-secondary me-1">
                         @item.Name
                     </span>
                    }
                </div>
                <img src="@Model.FeaturedImageUrl" class="bg-black img-fluid mb-3" />
                <div class="mb-3 blog-details-content">
                   @Html.Raw(Model.Content)
                </div>
            }
            else
            {
                <p>There is no Block present</p>
            }

        </div>

    </div>

</div>