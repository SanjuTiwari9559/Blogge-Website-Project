@model Blogge.Web.Models.ViewModel.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- You can include any other CSS files you need -->
</head>
<body class="bg-info">
    <div class="container mx-auto">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-lg-6">
                <h1 class="mt-3 mb-3 text-center text-white">Login</h1>
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label text-white">Name</label>
                        <input type="text" id="UserName" class="form-control rounded-pill" asp-for="UserName">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white">Password</label>
                        <input type="password" id="Password" class="form-control rounded-pill" asp-for="Password">
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-success w-100 rounded-pill">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

