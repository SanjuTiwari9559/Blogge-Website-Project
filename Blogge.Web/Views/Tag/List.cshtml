@{
}
@model IEnumerable<Blogge.Web.Models.Domain.Tag>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show All Tags</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body class="bg-opacity-75">
    <div class=" bg-opacity-10 my-2">
        <div class="container">
            <h1 class="text-center">Show All Tags</h1>
        </div>
    </div>
    <div class="container py-5">
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped">
                <thead class="bg-warning">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>DisplayName</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.DisplayName</td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Tag", new { area = "", id = item.Id })">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No tags found.</p>
        }
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
